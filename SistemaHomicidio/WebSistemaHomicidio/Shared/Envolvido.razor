                            <MudItem xs="12" sm="6" md="6">
                                <MudField Label="Informação do Trabalho" Variant="Variant.Outlined" InnerPadding="false">
                                    <MudRadioGroup @bind-SelectedOption="@novoEnvolvido.InformacaoTrabalho">
                                        <MudRadio Option="@("DE SERVICO")" Color="Color.Primary">De Serviço</MudRadio>
                                        <MudRadio Option="@("DE FOLGA")" Color="Color.Primary">De Folga</MudRadio>
                                        <MudRadio Option="@("NAO INFORMADO")" Color="Color.Primary">Não Informado</MudRadio>
