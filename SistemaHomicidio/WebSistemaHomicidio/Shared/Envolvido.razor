                                <MudSelect T="string" Label="Orientação Sexual" Variant="Variant.Outlined" @bind-Value="@novoEnvolvido.OrientacaoSexual">
                                    <MudSelectItem Value="@("HETEROSSEXUAL")" />
                                    <MudSelectItem Value="@("HOMOSSEXUAL")" />
                                    <MudSelectItem Value="@("BISSEXUAL")" />
                                    <MudSelectItem Value="@("LESBICA")" />
                                    <MudSelectItem Value="@("GAY")" />
                                    <MudSelectItem Value="@("NAO INFORMADO")" />
