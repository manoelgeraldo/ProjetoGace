                                    <MudSelectItem Value="@("MAE")" />
                                    <MudSelectItem Value="@("NAMORADO(A)")" />
                                    <MudSelectItem Value="@("NAO INFORMADO")" />
                                    <MudSelectItem Value="@("NETO(A)")" />
                                    <MudSelectItem Value="@("NOIVO(A)")" />
                                    <MudSelectItem Value="@("OUTROS")" />
                                    <MudSelectItem Value="@("PADRASTO/MADRASTA")" />
                                    <MudSelectItem Value="@("PAI")" />
                                    <MudSelectItem Value="@("PRIMO(A)")" />
                                    <MudSelectItem Value="@("RESPONSAVEL LEGAL")" />
                                    <MudSelectItem Value="@("SOBRINHO(A)")" />
                                    <MudSelectItem Value="@("SOGRO(A)")" />
                                    <MudSelectItem Value="@("TIO(A)")" />
                                    <MudSelectItem Value="@("VIZINHO(A)")" />
                                </MudSelect>
                            </MudItem>
                            <!--Relação Intra familiar - Vítima/Autor-->
                            <MudItem xs="12" sm="6" md="6">
                                <MudSelect T="string" @bind-Value="@novoEnvolvido.RelacaoIntraFamiliarVitimaAutor" Label="Relação Intrafamiliar - Vítima/Autor" Variant="Variant.Outlined">
                                    <MudSelectItem Value="@("AMIGO(A)")" />
                                    <MudSelectItem Value="@("AVO")" />
                                    <MudSelectItem Value="@("COLEGA DE TRABALHO")" />
                                    <MudSelectItem Value="@("CONJUGE")" />
                                    <MudSelectItem Value="@("CUNHADO(A)")" />
                                    <MudSelectItem Value="@("DESCONHECIDO")" />
                                    <MudSelectItem Value="@("ENTEADO(A)")" />
                                    <MudSelectItem Value="@("FILHO(A)")" />
                                    <MudSelectItem Value="@("GENRO/NORA")" />
                                    <MudSelectItem Value="@("IRMAO(A)")" />
                                    <MudSelectItem Value="@("MAE")" />
                                    <MudSelectItem Value="@("NAMORADO(A)")" />
                                    <MudSelectItem Value="@("NAO INFORMADO")" />
                                    <MudSelectItem Value="@("NETO(A)")" />
                                    <MudSelectItem Value="@("NOIVO(A)")" />
