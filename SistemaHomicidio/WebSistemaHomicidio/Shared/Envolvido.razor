            <MudTabPanel Text="Saúde">
                <MudText>
                    <MudPaper Class="pa-5 mx-2" Elevation="3">
                        <MudGrid>
                            <!--Lesão-->
                            <MudItem xs="12" sm="6" md="3">
                                <MudField Label="Lesão" Variant="Variant.Outlined" InnerPadding="false">
                                    <MudRadioGroup @bind-SelectedOption="@novoEnvolvido.Saude.Lesao">
