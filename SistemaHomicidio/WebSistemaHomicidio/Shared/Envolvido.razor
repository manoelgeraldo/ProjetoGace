                                    <MudSelectItem Value="@("AMARELA")" />
                                    <MudSelectItem Value="@("BRANCA")" />
                                    <MudSelectItem Value="@("DESCONHECIDA")" />
                                    <MudSelectItem Value="@("NAO INFORMADA")" />
