
<EditForm Model="@novoEnvolvido" OnValidSubmit="Salvar">
    <DataAnnotationsValidator />
    <MudContainer Style="max-height: 600px; overflow-y: scroll">
        <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
            <!--Dados Pessoais-->
            <MudTabPanel Text="Dados Pessoais">
                <MudText>
                    <MudPaper Class="pa-5 mx-2" Elevation="3">
                        <MudGrid>
                            <!--Tipo de Envolvimento-->
                            <MudItem xs="12" sm="6" md="3">
                                <MudField Label="Tipo de Envolvimento" Variant="Variant.Outlined" InnerPadding="false" Class="container">
                                    <MudRadioGroup @bind-SelectedOption="@novoEnvolvido.TipoEnvolvido">
                                        <MudRadio Option="@("VITIMA")" Color="Color.Primary">Vítima</MudRadio>
                                        <MudRadio Option="@("IMPULTADO")" Color="Color.Primary">Impultado</MudRadio>
                                        <ValidationMessage For="@(()=> novoEnvolvido.TipoEnvolvido)" />
                                    </MudRadioGroup>
                                </MudField>
                            </MudItem>
                            <!--Autoria-->
                            <MudItem xs="12" sm="6" md="3">
                                <MudField Label="Autoria" Variant="Variant.Outlined" InnerPadding="false">
                                    <MudRadioGroup @bind-SelectedOption="@novoEnvolvido.Autoria" >
                                        <MudRadio Option="@("CONHECIDA")" Color="Color.Primary">Conhecida</MudRadio>
                                        <MudRadio Option="@("DESCONHECIDA")" Color="Color.Primary">Desconhecida</MudRadio>
                                    </MudRadioGroup>
                                </MudField>
                            </MudItem>
                            <!--Prisão Em Flagrante-->
                            <MudItem xs="12" sm="6" md="3">
                                <MudField Label="Prisão Em Flagrante" Variant="Variant.Outlined" InnerPadding="false">
                                    <MudRadioGroup @bind-SelectedOption="@novoEnvolvido.Flagrante">
                                        <MudRadio Option="@("SIM")" Color="Color.Primary">Sim</MudRadio>
                                        <MudRadio Option="@("NAO")" Color="Color.Primary">Não</MudRadio>
                                    </MudRadioGroup>
                                </MudField>
                            </MudItem>
                            <!--Turista-->
                            <MudItem xs="12" sm="6" md="2">
                                <MudField Label="Turista" Variant="Variant.Outlined" InnerPadding="false">
                                    <MudRadioGroup @bind-SelectedOption="@novoEnvolvido.Turista">
                                        <MudRadio Option="@("SIM")" Color="Color.Primary">Sim</MudRadio>
                                        <MudRadio Option="@("NAO")" Color="Color.Primary">Não</MudRadio>
                                    </MudRadioGroup>
                                </MudField>
                            </MudItem>
                            <!--Nome do Envolvido-->
                            <MudItem xs="12" sm="6" md="6">
                                <MudTextField Label="Nome"
                                              Variant="Variant.Outlined"
                                              Adornment="Adornment.End" 
                                              For="@(()=> novoEnvolvido.NomeEnvolvido)"
                                              @bind-Value="@novoEnvolvido.NomeEnvolvido"/>
                            </MudItem>
                            <!--Nome Social-->
                            <MudItem xs="12" sm="6" md="4">
                                <MudTextField Label="Nome Social"
                                              Variant="Variant.Outlined"
                                              Adornment="Adornment.End" 
                                              @bind-Value="@novoEnvolvido.NomeSocial"/>
                            </MudItem>
                            <!--Vulgo-->
                            <MudItem xs="12" sm="6" md="2">
                                <MudTextField Label="Vugo"
                                              Variant="Variant.Outlined"
                                              Adornment="Adornment.End" 
                                              @bind-Value="@novoEnvolvido.Vulgo"/>
                            </MudItem>
                            <!--Nome Da Mãe-->
                            <MudItem xs="12" sm="6" md="6">
                                <MudTextField Label="Nome Da Mãe"
                                              Variant="Variant.Outlined"
                                              Adornment="Adornment.End" 
                                              @bind-Value="@novoEnvolvido.NomeGenitora"/>
                            </MudItem>
                            <!--Data de Nascimento-->
                            <MudItem xs="12" sm="6" md="2">
                                <MudDatePicker Label="Data de Nascimento"
                                               DisableToolbar="true"
                                               DateFormat="dd/MM/yyyy"
                                               AllowKeyboardInput="true"
                                               MinDate="DateTime.Now.AddYears(-100)"
                                               MaxDate="DateTime.Now"
                                               Date="@novoEnvolvido.DataNascimento"
                                               DateChanged="@((e) => { dataNascimento = Convert.ToDateTime(e.Value.ToString()); CalcularIdade(); })"/>
                            </MudItem>
                            <!--Idade Exata-->
                            <MudItem xs="12" sm="6" md="2">
                                @if(@idadeExata is null)
                                {
                                    <MudTextField Label="Idade Exata"
                                              Variant="Variant.Outlined"
                                              Adornment="Adornment.End"
                                              @bind-Value="@novoEnvolvido.IdadeExata"/>
                                }
                                else
                                {
                                    <MudTextField Label="Idade Exata"
                                              Variant="Variant.Outlined"
                                              Adornment="Adornment.End"
                                              @bind-Value="@novoEnvolvido.IdadeExata"
                                              Text="@idadeExata"/>
                                }
                            </MudItem>
                            <!--Idade Aparente-->
                            <MudItem xs="12" sm="6" md="2">
                                <MudTextField Label="Idade Aparente"
                                              Variant="Variant.Outlined"
                                              Adornment="Adornment.End" 
                                              @bind-Value="@novoEnvolvido.IdadeAparente"/>
                            </MudItem>
                            <!--Sexo-->
                            <MudItem xs="12" sm="6" md="8">
                                <MudField Label="Sexo" Variant="Variant.Outlined" InnerPadding="false">
                                    <MudRadioGroup @bind-SelectedOption="@novoEnvolvido.Sexo">
                                        <MudRadio Option="@("MASCULINO")" Color="Color.Primary">Masculino</MudRadio>
                                        <MudRadio Option="@("FEMININO")" Color="Color.Primary">Feminino</MudRadio>
                                        <MudRadio Option="@("DESCONHECIDO")" Color="Color.Primary">Desconhecido</MudRadio>
                                        <MudRadio Option="@("NAO INFORMADO")" Color="Color.Primary">Desconhecido</MudRadio>
                                    </MudRadioGroup>
                                </MudField>
                            </MudItem>
                            <!--Identidade de Gênero-->
                            <MudItem xs="12" sm="6" md="2">
                                <MudSelect T="string" Label="Ident.Gênero" Variant="Variant.Outlined" @bind-Value="@novoEnvolvido.IdentidadeGenero">
                                    <MudSelectItem Value="@("HOMEM CISGENERO")" />
                                    <MudSelectItem Value="@("MULHER CISGENERO")" />
                                    <MudSelectItem Value="@("HOMEM TRANS")" />
                                    <MudSelectItem Value="@("MULHER TRANS")" />
                                    <MudSelectItem Value="@("TRAVESTI")" />
                                    <MudSelectItem Value="@("NAO INFORMADO")" />
                                </MudSelect>
                            </MudItem>
                            <!--Orientação Afetiva-Sexual-->
