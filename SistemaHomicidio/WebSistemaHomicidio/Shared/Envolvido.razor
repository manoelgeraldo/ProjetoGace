                                    <MudSelectItem Value="@("SOBRINHO(A)")" />
                                    <MudSelectItem Value="@("SOGRO(A)")" />
                                    <MudSelectItem Value="@("TIO(A)")" />
                                    <MudSelectItem Value="@("VIZINHO(A)")" />
                                </MudSelect>
                            </MudItem>
                            <!--Instrumento Utilizado-->
                            <MudItem xs="12" sm="6" md="6">
                                <MudSelect T="string" Label="Instrumento Utilizado" Variant="Variant.Outlined" @bind-Value="@novoEnvolvido.InstrumentoUtilizado">
                                    <MudSelectItem Value="@("ARMA DE FOGO")" />
                                    <MudSelectItem Value="@("ARMA BRANCA")" />
                                    <MudSelectItem Value="@("INSTRUMENTO CONTUDENTE")" />
                                    <MudSelectItem Value="@("OUTROS TIPOS DE OBJETOS")" />
                                </MudSelect>
                            </MudItem>
                            <!--Nome do Instrumento Utilizado-->
                            <MudItem xs="12" sm="6" md="6">
                                <MudAutocomplete T="string" Label="Tipos de Objetos" Variant="Variant.Outlined" @bind-Value="@novoEnvolvido.NomeInstrumentoUtilizado"
                                                    SearchFunc="@TiposDeObjetos" />
                            </MudItem>
                            <!--Motivação Inicial-->
                            <MudItem xs="12" sm="6" md="6">
                                <MudAutocomplete T="string" Label="Motivação Inicial" Variant="Variant.Outlined"
                                                 @bind-Value="@novoEnvolvido.MotivacaoInicial"
                                                 SearchFunc="@MotivacaoCrime" />
                            </MudItem>
                            <!--Motivação Com o Fim do Inquérito Policial-->
                            <MudItem xs="12" sm="6" md="6">
                                <MudAutocomplete T="string" Label="Motivação Final" Variant="Variant.Outlined"
