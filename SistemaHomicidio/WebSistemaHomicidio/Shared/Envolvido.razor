                            <MudItem xs="12" sm="6" md="3">
                                <MudTextField Label="Localidade/Comunidade"
                                              Variant="Variant.Outlined"
                                              Adornment="Adornment.End"
                                              @bind-Value="@novoEnvolvido.Endereco.LocalidadeComunidadeEndereco"/>
                            </MudItem>
                            <!--Tipo de Residência-->
                            <MudItem xs="12" sm="6" md="3">
                                <MudTextField Label="Tipo de Residência"
