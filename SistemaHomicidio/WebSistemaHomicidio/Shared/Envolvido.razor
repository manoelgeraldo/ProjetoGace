            <MudTabPanel Text="Endereço">
                <MudText>
                    <MudPaper Class="pa-5 mx-2" Elevation="3">
                        <MudGrid>
                            <!--Região-->
                            <MudItem xs="12" sm="6" md="6">
                                <MudSelect T="string" Label="Região" Variant="Variant.Outlined"  @bind-Value="@novoEnvolvido.Endereco.RegiaoEndereco">
