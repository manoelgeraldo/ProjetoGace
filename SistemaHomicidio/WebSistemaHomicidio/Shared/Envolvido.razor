                                    <MudSelectItem Value="@("ZONA DA MATA NORTE")" />
                                    <MudSelectItem Value="@("ZONA DA MATA SUL")" />
                                    <MudSelectItem Value="@("AGRESTE")" />
                                    <MudSelectItem Value="@("SERTÃO")" />
                                </MudSelect>
                            </MudItem>
                            <!--Município-->
                            <MudItem xs="12" sm="6" md="6">
                                <MudAutocomplete T="string" Label="Município" Variant="Variant.Outlined" @bind-Value="@novoEnvolvido.Endereco.MunicipioEndereco"
